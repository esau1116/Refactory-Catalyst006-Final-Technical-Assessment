doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title CATALYST 006
  link(rel='stylesheet' href='/css/bootstrap.css')
  link(rel='stylesheet' href='/css/main.css')
form.covid(style='border:1px solid black; margin-top:15px;' action='/' method='Post' name='registration'  onsubmit='formValidation(event)')
  .container
    .row
      .col-lg-12
        img(src='/images/form-header-image.png' alt='' width='100%' height='100%')
    
  div
    h6(style='text-align: center;')
      | Ministry of Health
  div
    h3(style='text-align: center; font-weight:bold;')
      | COVID19(CORONA VIRUS)
  div
    h6(style='text-align: center;')
      | Virus-Test Registration Form
  .form-row(style='margin-left:20px; margin-right:20px;')
    .form-group.col-md-6
      label(for='name') Sur name
      input#surnames.form-control(type='text' name='surname' required )
      #err1(style='color:red;')
    .form-group.col-md-6
      label(for='name') Given name
      input#given-names.form-control(type='text' name='given_name' required )
      #err2(style='color:red;')
  .form-row(style='margin-left:20px; margin-right:20px;')
    .form-group.col-md-6
      label(for='name') Date of birth
      input#date.form-control(type='date' name='dob' placeholder='YY/MM/DD' required )
      #error3(style='display: none; color:red;') Select Date of Birth
    .form-group.col-md-6
      label(for='name') Place of residence
      input.form-control(type='text' id='residence' name='placeofresidence' required)
      #err4(style='color:red;')
  .form-row(style='margin-left:20px; margin-right:20px;')
    .form-group.col-md-6
      label(for='name') Occupation
      input.form-control(type='text' id='occupation' name='occupation' required )
      #err5(style='color:red;')
    .form-group.col-md-6
      label(for='name') Nationality
      input.form-control(type='text' id='nationality' name='nationality' required)
      #err7(style='color:red;')
  .form-row(style='margin-left:20px; margin-right:20px;')
    .form-group.col-md-6
      label(for='name') Gender
      input(type='radio' name='gender' value='male' required)
      | Male
      input(type='radio' style='margin-left: 150px;' name='gender' value='female')
      | Female
  .form-row(style='margin-left:20px; margin-right:20px;')
    .form-group.col-md-12
      label(for='name') Categories
      select.form-control(name='category' id='category' placeholder='--Select Category--' required)
        #error7(style='display: none; color:red;') Select Patient category
        option(value='default') --Select Category--
        option(value='returnee') Returnee
        option(value='contact') Contact
        option(value='volunteer') Volunteer
        option(value='alert') Alert
        
        

  input.btn.btn-primary(type='submit' value='Register' style='margin-left: 510px; padding:3px 60px;')
  script(src='/js/userValidation.js')